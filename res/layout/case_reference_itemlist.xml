<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/csrfil_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:gravity="center_vertical"
            android:text="2014.4.15"
            android:textColor="#88837B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/csrfil_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:textColor="#88837B"
            android:text="各单位认真学习11.15安全dddddddddddddddddddd事故"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dip"
            android:scaleType="centerInside"
            android:gravity="center_vertical"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <View
        android:id="@+id/csrfil_line"
        android:layout_width="match_parent"
        android:layout_height="0.2sp"
        android:background="#E4DACB" />
</LinearLayout>